<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/toolbar"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="Doktor Chat"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/bar_layout_RelativeNotif"
        android:layout_gravity="end"
        android:layout_marginRight="18dp"
        android:visibility="invisible"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_notification"
            android:id="@+id/bar_layout_imgNotifiaction"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="11dp"
            android:id="@+id/txt_bildirimSayisi"
            android:layout_alignRight="@id/bar_layout_imgNotifiaction"
            android:textColor="#524949"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>